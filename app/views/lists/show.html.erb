<div class = "container">
  <h1><%= @list.name %></h1>
  <ul>
    <% @list.movies.each do |movie| %>
      <li><%= movie.title %>
      <%= link_to "Delete",
      bookmark_path(@bookmark),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%></li>
    <% end %>
  </ul>
  <p><%= link_to "add a movie",new_list_bookmark_path(@list) %></p>
  <p><%= link_to "back","/lists" %></p>

</div>
